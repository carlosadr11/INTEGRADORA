<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <center><h1>Lista de Clientes</h1></center>

      <div class="table-responsive">
        <table class="table table-striped">
  <%= link_to "Excel", clients_path(format: "csv"), class:'btn btn-success' %> |
  <%= link_to "PDF", clients_path(format: "pdf"), class: 'btn btn-danger' %>

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Domicilio</th>
      <th>Telefono</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.nombre %></td>
        <td><%= client.apellido %></td>
        <td><%= client.domicilio %></td>
        <td><%= client.telefono %></td>
        <td><%= client.email %></td>
        <td><%= link_to 'Mostrar', client, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_client_path(client), class: "btn btn-warning" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'Nuevo Cliente', new_client_path, class: "btn btn-primary"  %>
<br>
<div class="pager">
  <li class="previous disabled">
    <%= will_paginate   @clients, renderer: BootstrapPagination::Rails, previous_label: h("Regresar"), :style => 'color:blue', next_label: h("Siguiente"), :style => 'color:blue' %>
  </li>
     </div>
    </div>
  </div>
</div>