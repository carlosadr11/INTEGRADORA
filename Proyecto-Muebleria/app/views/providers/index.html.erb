<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-">
      <center><h1 class="top-aligned-row">Lista de proveedores</h1></center>
<%= link_to "Excel", providers_path(format: "csv"), class:'btn btn-success' %> |
<%= link_to "PDF", providers_path(format: "pdf"), class: 'btn btn-danger' %>

<div class="table-responsive">
  <table class="table table-striped", class ="responsive">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Domiciolio</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Total de Productos</th>
      <th>Fecha</th>
      <th>Total de pago</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.nombre %></td>
        <td><%= provider.apellido %></td>
        <td><%= provider.domiciolio %></td>
        <td><%= provider.telefono %></td>
        <td><%= provider.email %></td>
        <td><%= provider.totalProductos %></td>
        <td><%= provider.fecha %></td>
        <td><%= provider.totalPago %></td>
        <td><%= link_to 'Mostrar', provider, class: "btn btn-info"  %></td>
        <td><%= link_to 'Editar', edit_provider_path(provider), class: "btn btn-warning"  %></td>
        <% if user_signed_in?%>
          <td><%= link_to 'Eliminar', provider, method: :delete, data: { confirm: 'Â¿Esta seguro?' }, class: "btn btn-danger" %></td>
        <% end %>
       </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo Proveedor', new_provider_path, class: "btn btn-primary"  %>
<br>
  <div class="pager">
    <li class="previous disabled">
      <%= will_paginate   @providers, renderer: BootstrapPagination::Rails, previous_label: h("Regresar"), :style => 'color:blue', next_label: h("Siguiente"), :style => 'color:blue' %>
    </li>
  </div>
</div>
</div>
</div>
</div>