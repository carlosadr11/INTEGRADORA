<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <center><h1>Lista de productos</h1></center>
<%= link_to "Excel", products_path(format: "csv"), class:'btn btn-success' %> |
  <%= link_to "PDF", products_path(format: "pdf"), class: 'btn btn-danger' %>
<div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nombre %></td>
        <td><%= product.type.nombre %></td>
        <td><%= product.cantidad %></td>
        <td><%= product.precio %></td>
        <td><%= link_to 'Mostrar', product, class: "btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-warning" %></td>
        <td><%= link_to 'Eliminar',product, method: :delete, data: { confirm: 'Â¿Esta seguro?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>

<br>

<%= link_to 'Agregar Producto', new_product_path, class: "btn btn-primary" %>
<br>
<div class="pager">
  <li class="previous disabled">
    <%= will_paginate   @products, renderer: BootstrapPagination::Rails, previous_label: h("Regresar"), :style => 'color:blue', next_label: h("Siguiente"), :style => 'color:blue' %>
  </li>
</div>
</div>
</div>
</div>